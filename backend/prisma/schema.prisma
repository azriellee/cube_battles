generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Room {
  code String @id
}

model RoomParticipant {
  roomCode    String
  playerName  String

  @@id([roomCode, playerName])
}

model RoomScrambles {
  roomCode    String
  date        DateTime
  scrambles   String

  @@id([roomCode, date])
}

model RoomStatistics {
  roomCode    String
  playerName  String
  date        DateTime
  ao5         Float?
  ao12        Float?
  bestSolve   Float?
  dailyPoints  Int      @default(0)

  @@id([roomCode, playerName, date])
}

model WeeklyLeaderboard {
  roomCode     String
  playerName   String
  weekStart    DateTime
  weeklyPoints Int      @default(0)

  @@id([roomCode, playerName, weekStart])
}

// These represent the BEST times achieved by ANY player in the room during the week
model WeeklyBestStats {
  roomCode            String
  weekStart           DateTime 
  bestAo5             Float?
  bestAo5PlayerName   String?
  bestAo12            Float?
  bestAo12PlayerName  String?
  bestSolve           Float?
  bestSolvePlayerName String?

  @@id([roomCode, weekStart])
}