generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Room {
  code String @id
}

model Player {
  playerName  String   @id
  email       String   @unique
  dateJoined  DateTime @default(now())
  numSolves   Int      @default(0)
  totalTime   Float    @default(0)
  bestAo5     Float?
  bestAo12    Float?
  bestSolve   Float?
}

model RoomParticipant {
  roomCode    String
  playerName  String

  @@id([roomCode, playerName])
}

model RoomScrambles {
  roomCode    String
  date        DateTime
  scrambles   String

  @@id([roomCode, date])
}

model RoomStatistics {
  roomCode    String
  playerName  String
  date        DateTime
  ao5         Float?
  ao12        Float?
  bestSolve   Float?
  dailyPoints Int      @default(0)

  @@id([roomCode, playerName, date])
}

model WeeklyLeaderboard {
  roomCode     String
  playerName   String
  weekStart    DateTime
  weeklyPoints Int      @default(0)

  @@id([roomCode, playerName, weekStart])
}

// These represent the BEST times achieved by each player in the room during the week
model WeeklyBestStats {
  roomCode            String
  weekStart           DateTime 
  playerName          String
  bestAo5             Float?
  bestAo12            Float?
  bestSolve           Float?

  @@id([roomCode, weekStart, playerName])
}